<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/landlordWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Property"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Label for Property Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Name"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property name"
            android:layout_marginTop="8dp" />

        <!-- Label for Property Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Type"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/property_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Label for Province -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Province"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/province_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Label for City -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Label for Property Price -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Price"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/property_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter property price"
            android:inputType="number"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_add_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Property"
            android:layout_marginTop="16dp" />

        <!-- Label and Upload button for Room Interior -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Room Interior"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btn_upload_room_interior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Room Interior"
            android:layout_marginTop="8dp" />

        <!-- ImageView for Room Interior -->
        <ImageView
            android:id="@+id/img_room_interior"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Room Interior Image"
            android:scaleType="centerCrop"
            android:background="@drawable/default_image"
             />

        <!-- Label and Upload button for Bathroom and Showers -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Bathroom and Showers"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_upload_bathroom_shower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Bathroom and Showers"
            android:layout_marginTop="8dp" />

        <!-- ImageView for Bathroom and Showers -->
        <ImageView
            android:id="@+id/img_bathroom_shower"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Bathroom and Showers Image"
            android:scaleType="centerCrop"
            android:background="@drawable/default_image"
            />

    </LinearLayout>

</ScrollView>
