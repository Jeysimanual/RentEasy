        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    >

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/baseline_circle"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property Description"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tell us more about your property"
        android:textColor="@color/black"
        android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>

        <EditText
            android:id="@+id/property_description"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="no description provided"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/input_box"
            android:minHeight="150dp"
            android:gravity="top|start"
            android:layout_marginTop="10dp"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:layout_gravity="center_horizontal"/>
        <!-- Label and Upload button for Room Interior -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Room Interior"
            android:textColor="@color/black"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btn_upload_room_interior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Room Interior"
            android:textColor="@color/white"
            android:background="@drawable/color_btn"
            android:layout_marginTop="8dp" />

        <!-- ImageView for Room Interior -->
        <ImageView
            android:id="@+id/img_room_interior"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Room Interior Image"
