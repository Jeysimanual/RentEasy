<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/white">

            <!-- Back Button -->
            <TextView
                android:id="@+id/backbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text=" Back"
                android:textColor="#000000"
                android:textSize="15sp" />

            <!-- Profile Text Centered -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Property Details"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Label for Property Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/property_name"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_box"
            android:paddingStart="10sp"
            android:hint="Enter property name"
            android:textSize="15sp"/>

        <!-- Label for Property Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Type"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/property_type_spinner"
            android:layout_width="130dp"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_customize"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Label for Province -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Province"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:id="@+id/province_spinner"
                    android:layout_width="130dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_customize" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="39dp">
                <!-- Label for City -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_customize"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Label for Province -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:text="Barangay / District"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/barangay"
                    android:layout_width="130dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="8dp"
                    android:hint="Barangay / District"
                    android:textSize="15sp"
                    android:paddingStart="10sp"
                    android:background="@drawable/input_box" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="39dp">
                <!-- Label for City -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Line"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="8dp"
                    android:hint="Floor/Unit/Room/Street"
                    android:textSize="15sp"
                    android:paddingStart="10sp"
                    android:background="@drawable/input_box"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Label for Property Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Price"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <EditText
                    android:id="@+id/property_price"
                    android:layout_width="130dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/input_box"
                    android:hint="Property price"
                    android:inputType="number"
                    android:paddingStart="10sp"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="39dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Period"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:id="@+id/payment_period_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/spinner_customize"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
