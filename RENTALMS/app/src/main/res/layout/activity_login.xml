<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#f9f9f9"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginTop="@dimen/image_margin_top"
            android:background="@drawable/design" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top"
            android:layout_marginBottom="@dimen/text_margin_bottom"
            android:text="Email Address"
            android:textStyle="bold"
            android:textColor="#118EF6"
            android:textSize="@dimen/text_size_medium"
             />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginBottom="@dimen/edit_text_margin_bottom"
            android:background="@drawable/input_box"
            android:hint="Type your email address here"
            android:paddingStart="@dimen/edit_text_padding"
            android:inputType="text"
            android:textColorHint="#767575"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin_bottom"
            android:text="Password"
            android:textStyle="bold"
            android:textColor="#118EF6"
            android:textSize="@dimen/text_size_medium"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height">

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_box"
                    android:hint="Type your password here"
                    android:paddingStart="@dimen/edit_text_padding"
                    android:inputType="textPassword"
                    android:textColorHint="#767575"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:id="@+id/lock"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="match_parent"
                    android:padding="@dimen/icon_padding"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_lock"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/unlock"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="match_parent"
                    android:padding="@dimen/icon_padding"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_unlock"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/FP"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/text_margin_top"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="#118EF6"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/button_margin_top"
            android:background="@drawable/color_btn"
            android:text="LOG IN"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/text_margin_top">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:text="Not registered yet? " />

            <TextView
                android:id="@+id/createacc"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textColor="#118EF6"
                android:textSize="@dimen/text_size_medium"
                android:clickable="true"
                android:text="@string/u_text1" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
